create table plan (
	id SERIAL primary key,
	name VARCHAR(255) NOT null,
	price VARCHAR(255) NOT null,
	alternative VARCHAR(255) NOT null,
	includes VARCHAR(255) NOT null,
	include1 VARCHAR(255) NOT null,
	include2 VARCHAR(255) NOT null,
	include3 VARCHAR(255) NOT null,
	include4 VARCHAR(255),
	include5 VARCHAR(255) not null
);

insert into plan (id, name, price, alternative, includes, include1, include2, include3, include4, include5)
